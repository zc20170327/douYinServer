    <select id="findRcsArchiveFlowVoList" resultMap="QueryRcsArchiveFlowVo" >
        SELECT F.ID_,i.ARCH_NUM_,i.QUESTION_FROM_,i.QUESTION_TYPE_,i.SUOS_LIUY_,i.STATUS_,f.OPER_TIME_
        FROM rcs_archive_flow f,
        rcs_archive_info i
        <where>
        f.ID_ = i.ID_
       <!-- <include refid="query_items_where"></include>-->
        </where>
    </select>

</mapper>